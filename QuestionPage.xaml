<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathQuiz.QuestionPage">
    <VerticalStackLayout Padding="20">
        <ProgressBar x:Name="ProgressBar" HeightRequest="6" />
        <Label x:Name="QuestionProgress" FontSize="16" Margin="10,30,10,30"/>
        <ProgressBar x:Name="ProgressBarQuestion" HeightRequest="6" Progress="1" />
        <Label x:Name="TimerLabel" FontSize="16" Margin="10,30,10,30"/>
        <Grid
    ColumnDefinitions="Auto,*,Auto"
    ColumnSpacing="5" Margin="10,10,10,10">
            <Label x:Name="QuestionLabel" FontSize="22" Grid.Column="0" VerticalOptions="Center"/>
            <Entry
        x:Name="AnswerEntry"
        Grid.Column="1"
        Keyboard="Numeric"
        Placeholder="Twoja odpowiedÅº"
        FontSize="22"
        VerticalOptions="Center"
        />

            <Button
        Grid.Column="2"
        Text="Odpowiedz"
        Clicked="OnAnswer"
        VerticalOptions="Center"
        />
        </Grid>
        <Button Text="Koniec" BackgroundColor="{DynamicResource Secondary}" Clicked="OnFinishClicked" Margin="10,10,10,10"/>
    </VerticalStackLayout>
</ContentPage>